<% provide(:title, "Utilizadores") %>

<h1>Utilizadores</h1>
<div class="span8 offset2">
	<table class="table">
		<thead>
			<tr>
				<th>Nome</th>
				<th>Email</th>
				<th>Autorizado</th>
				<th>Administrador</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.nome %></td>
					<td><%= user.email %></td>
					<td><%= user.status %></td>
					<td><%= user.admin %></td>
					<td><%= link_to "Editar", edit_user_path(user), class: 'btn' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>