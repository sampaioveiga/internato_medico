<% provide(:title, "Lista de Internos") %>

<div class="span10 offset1">
	<h1>Lista de Internos</h1>
	<div class="actions">
        <%= link_to 'Novo Interno', new_intern_path, class: 'btn' %>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Numero mecanogr√°fico</th>
                <th>Telefone</th>
                <th>Telemovel</th>
                <th>E-mail</th>
            </tr>
        </thead>

        <tbody>
            <% @interns.each do |intern| %>
                <tr>
                    <td><%= link_to intern.nome, intern %></td>
                    <td><%= intern.numero_mecanografico %></td>
                    <td><%= intern.telefone %></td>
                    <td><%= intern.telemovel %></td>
                    <td><%= intern.email %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>