<% provide(:title, "Serviços") %>

<h1>Serviços</h1>
<div class="span6 offset3">
    <div class="actions">
        <%= link_to 'Novo Serviço', new_service_path, class: 'btn btn-primary' %>
    </div>

    <table class="table">
        <tbody>
            <% @services.each do |service| %>
                <tr>
                    <td><%= link_to service.nome, edit_service_path(service) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>